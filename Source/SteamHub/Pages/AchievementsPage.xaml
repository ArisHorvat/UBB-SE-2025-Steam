<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamHub.Pages.AchievementsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamHub.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:SteamHub.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converters:ImagePathToImageSourceConverter x:Key="ImagePathToImageSourceConverter"/>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    </Page.Resources>

    <Grid Padding="20" HorizontalAlignment="Center">
       

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <!-- Achievements Title -->
            <TextBlock Text="ACHIEVEMENTS" FontSize="30" FontWeight="Bold" TextAlignment="Center"/>

            <StackPanel Margin="20,20,20,0">
                <TextBlock Text="FRIENDSHIPS" FontSize="20" FontWeight="Bold" />

                <ItemsControl ItemsSource="{Binding FriendshipsAchievements}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="20"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="120" Margin="0,0,20,0">
                                <Border Width="70" Height="70" CornerRadius="35" Background="LightGray">
                                    <Grid>
                                        <Image Source="{Binding Achievement.Icon, Converter={StaticResource ImagePathToImageSourceConverter}}" 
                                               Stretch="UniformToFill" 
                                               IsHitTestVisible="True" 
                                               Opacity="{Binding Opacity}"/>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Achievement.AchievementName}" 
                                                              FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Achievement.Description}" 
                                                              TextWrapping="Wrap" 
                                                              MaxWidth="200"/>
                                                    <TextBlock Text="{Binding UnlockedDate, Converter={StaticResource StringFormatConverter}, ConverterParameter='Unlocked: {0:g}'}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </Grid>
                                </Border>
                                <!-- Achievement name -->
                                <TextBlock Text="{Binding Achievement.AchievementName}"
                                         TextWrapping="Wrap"
                                         TextAlignment="Center"
                                         MaxWidth="120"
                                         Margin="0,5,0,2"
                                         FontSize="11"
                                         FontWeight="SemiBold"/>
                                <!-- Achievement description -->
                                <TextBlock Text="{Binding Achievement.Description}"
                                         TextWrapping="Wrap"
                                         TextAlignment="Center"
                                         MaxWidth="120"
                                         Margin="0,0,0,5"
                                         FontSize="9"
                                         Foreground="Gray"
                                         MaxLines="2"
                                         TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

