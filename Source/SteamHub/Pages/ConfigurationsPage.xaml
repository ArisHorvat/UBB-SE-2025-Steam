                        Width="200"/> -->
                <Button Content="Modify Profile"
                        Command="{Binding NavigateToProfileSettingsCommand}"
                        Style="{StaticResource ModernSteamButton}"
                        HorizontalAlignment="Center" 
                        Width="200"/>
               
            </StackPanel>
        </Border>
    </Grid>
</Page>
