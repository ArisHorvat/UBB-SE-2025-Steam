                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed"/>
                                                                <VisualState x:Name="Disabled"/>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Border x:Name="BackgroundElement" Background="Transparent"/>
                                                        <ContentPresenter/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Popup x:Name="FilterPopup" IsLightDismissEnabled="True">
            <Grid Background="#80000000" Width="{Binding ActualWidth, ElementName=LayoutRoot}" Height="{Binding ActualHeight, ElementName=LayoutRoot}">
                <Border Style="{StaticResource ModernCardStyle}" Height="450" Width="360">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Filter Options" Margin="0,4,0,0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />

                        <!-- Rating Slider -->
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Minimum Rating" FontSize="14" HorizontalAlignment="Center"/>
                            <Slider x:Name="PopupRatingSlider"
                                Minimum="0"
                                Maximum="5"
                                Value="{Binding RatingFilter, Mode=TwoWay}"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                Width="180" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Price Range -->
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Price Range" FontSize="14" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                                <StackPanel>
                                    <TextBlock Text="Minimum" FontSize="12" HorizontalAlignment="Center"/>
                                    <Slider x:Name="MinPriceSlider"
                                        Minimum="0"
                                        Maximum="200"
                                        Value="{Binding MinPrice, Mode=TwoWay}"
                                        TickFrequency="10"
                                        TickPlacement="BottomRight"
                                        Width="120"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Maximum" FontSize="12" HorizontalAlignment="Center"/>
                                    <Slider x:Name="MaxPriceSlider"
                                        Minimum="0"
                                        Maximum="200"
                                        Value="{Binding MaxPrice, Mode=TwoWay}"
                                        TickFrequency="10"
                                        TickPlacement="BottomRight"
                                        Width="120"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Tag Selection -->
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Select Tags:" FontSize="14" HorizontalAlignment="Center"/>
                            <ListView ItemsSource="{Binding Tags}"
                                x:Name="TagListView"
                                SelectionMode="Multiple"
                                MaxHeight="120"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Tag_name}" Foreground="White" Margin="6,2"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                            <Button Content="Reset Filters" Click="ResetFilters_Click" Width="140" Style="{StaticResource ModernSteamButton}"/>
                            <Button Content="Apply Filters" Click="ApplyFilters_Click" Width="140" Style="{StaticResource ModernSteamButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</Page>