<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamHub.Pages.HomePage"
    xmlns:utils="using:SteamHub.Utils"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SteamHub.Pages"
    mc:Ignorable="d">

    <Page.Resources>
        <utils:PriceToStringConverter x:Key="PriceConverter"/>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Spacing="20" Padding="10">

                <!-- Search and filter -->
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="SearchBox"
                        PlaceholderText="Search for a game"
                        TextChanged="SearchBox_TextChanged"
                        Width="300"
                        Height="50"
                        FontSize="18"
                        Padding="12"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource ModernSteamTextBox}"/>
                    <Button Content="Filter" Click="FilterButton_Click" HorizontalAlignment="Right" Style="{StaticResource ModernSteamButton}"/>
                </StackPanel>

                <!-- All Games -->
                <Border Background="#1A1B1E" CornerRadius="8" Padding="20,10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="{Binding Search_filter_text}" 
                                 FontSize="28" 
                                 FontWeight="SemiBold" 
                                 Foreground="White"
                                 CharacterSpacing="50"/>
                        <ScrollViewer Style="{StaticResource ModernScrollViewer}"
                            HorizontalScrollMode="Enabled"
                            HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollMode="Disabled"
                            VerticalScrollBarVisibility="Hidden"
                            Padding="0,0,16,0"
                            Height="280"
                            Background="Transparent">
                    <ListView ItemsSource="{Binding SearchedOrFilteredGames}"
                        x:Name="GameListView"
                        SelectionChanged="ListView_SelectionChanged">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                        <Grid Width="190" Height="280" Margin="12,8">
                                            <Button x:Name="CardButton"
                                                    Background="Transparent"
                                                    BorderBrush="{StaticResource CardBorderBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="10"
                                                    Padding="0"
                                                    Click="CardButton_Click"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid x:Name="CardGrid">
                                                            <Border x:Name="CardBorder"
                                                                    Background="{StaticResource CardBackgroundBrush}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="{TemplateBinding CornerRadius}"
                                                                    Shadow="{StaticResource CardShadow}"
                                                                    RenderTransformOrigin="0.5,0.5">
                                                                <Border.RenderTransform>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                </Border.RenderTransform>
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="140"/>
                                                                        <RowDefinition Height="60"/>
                                                                    </Grid.RowDefinitions>
                                        <Image Source="{Binding ImagePath}"
                                                                        Grid.Row="0"
                                                                        Width="180" Height="150" 
                                                                        Stretch="UniformToFill"/>
                                                                    <Border Grid.Row="1" 
                                                                            Background="{StaticResource CardBackgroundBrush}"
                                                                            BorderThickness="0,1,0,0"
                                                                            BorderBrush="{StaticResource CardBorderBrush}">
                                                                        <StackPanel Padding="10" Spacing="8">
                                                                            <Border Background="#CC1B2838" 
                                                                                    CornerRadius="4" 
                                                                                    Padding="8,4">
                                                                                <TextBlock Text="{Binding GameTitle}" 
                                                                                         FontWeight="Bold" 
                                                                                         FontSize="18"
                                                                                         TextWrapping="Wrap"
                                                                                         LineHeight="22"
                                                                                         MaxHeight="44"
                                                                                         TextTrimming="CharacterEllipsis"
                                                                                         Foreground="White"/>
                                                                            </Border>
                                                                            <TextBlock Text="{Binding Price, Converter={StaticResource PriceConverter}}"
                                                                                     Foreground="{StaticResource AccentBrush}"
                                                                                     FontSize="16"
                                                                                     FontWeight="Bold"
                                                                                     VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <VisualStateManager.VisualStateGroups>
                                                                <VisualStateGroup x:Name="CommonStates">
                                                                    <VisualState x:Name="Normal">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                         To="1" Duration="0:0:0.2"/>
                                                                            <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                         To="1" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                    <VisualState x:Name="PointerOver">
                                                                        <Storyboard>
                                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CardBorder" 
                                                                                                       Storyboard.TargetProperty="BorderBrush">
                                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource AccentBrush}"/>
                                                                            </ObjectAnimationUsingKeyFrames>
                                                                            <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                         To="1.05" Duration="0:0:0.2"/>
                                                                            <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                         To="1.05" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                    <VisualState x:Name="Pressed"/>
                                                                    <VisualState x:Name="Disabled"/>
                                                                </VisualStateGroup>
                                                            </VisualStateManager.VisualStateGroups>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
