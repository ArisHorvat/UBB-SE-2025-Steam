<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SteamHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SteamHub.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="steamhub-theme">
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="HomePage" asp-action="Index">
                    <img src="~/CustomSteamLogo.png" alt="SteamHub" height="75" class="d-inline-block align-text-top me-3" style="object-fit: contain;">
                    <span class="fs-4">SteamHub</span>
                </a>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="HomePage" asp-action="Index">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="CartPage" asp-action="Index">
                            <i class="bi bi-cart"></i> Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Wishlist" asp-action="Index">
                            <i class="bi bi-heart"></i> Wishlist
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Developer" asp-action="Index">
                            <i class="bi bi-code-square"></i> Developer
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="PointShopPage" asp-action="Index">
                            <i class="bi bi-coin"></i> Point Shop
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Inventory" asp-action="Index">
                            <i class="bi bi-box"></i> Inventory
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Marketplace" asp-action="Index">
                            <i class="bi bi-shop"></i> Marketplace
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="TradePage" asp-action="Index">
                            <i class="bi bi-arrow-left-right"></i> Trade
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ActiveTrades" asp-action="Index">
                            <i class="bi bi-clock-history"></i> Active Trades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="TradeHistory" asp-action="Index">
                            <i class="bi bi-clock"></i> Trade History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Achievements" asp-action="Index">
                            <i class="bi bi-trophy"></i> Achievements
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="FriendsPage" asp-action="Index">
                            <i class="bi bi-people"></i> Friends
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="AddFriend" asp-action="Index">
                            <i class="bi bi-person-fill-add"></i> Add Friends
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Wallet" asp-action="Index">
                            <i class="bi bi-wallet2"></i> Wallet
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="News" asp-action="Index">
                            <i class="bi bi-newspaper"></i> News
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <div class="d-flex flex-column align-items-center">
                    <div class="profile-section mb-3">
                        <partial name="_LoginPartial" />
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="w-100">
                            <button type="submit" class="btn btn-danger w-100 small">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary w-100 small">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <button class="btn btn-dark d-md-none" id="sidebarToggle">
                <i class="bi bi-list"></i> Menu
            </button>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
