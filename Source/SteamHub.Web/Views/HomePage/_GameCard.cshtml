@model SteamHub.ApiContract.Models.Game.Game

<a asp-controller="GamePage" asp-action="Index" asp-route-id="@Model.GameId" class="text-decoration-none text-dark">
    <div class="card game-card me-2">
        <img src="@Model.ImagePath" class="card-img-top" alt="@Model.GameTitle" />
        <div class="card-body p-2">
            <h6 class="card-title text-truncate mb-1" title="@Model.GameTitle">@Model.GameTitle</h6>
            <p class="card-text mb-0">@Model.Price.ToString("C")</p>
        </div>
    </div>
</a>
